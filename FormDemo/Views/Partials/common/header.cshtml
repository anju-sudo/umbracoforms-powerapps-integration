@inherits UmbracoViewPage<Home>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@using Models
@{
    var homePage = Model;
    var logoImage = Model?.LogoImage;
    var searchQuery = Context.Request.Query["q"];
    var searchPage = Umbraco.ContentAtRoot()
        .DescendantsOrSelfOfType(Search.ModelTypeAlias)
        .FirstOrDefault();
    var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    var cultures = Model?.Cultures;
    var isEnglish = currentCulture.StartsWith("en");
    var isMalay = currentCulture.StartsWith("ms") || currentCulture == "ms-bn";

    var englishUrl = Model.Url("en-US");
    var malayUrl = Model.Url("ms-bn");
    var loginPageUrl = Umbraco.ContentAtRoot()
        .DescendantsOrSelfOfType(Login.ModelTypeAlias)
        .FirstOrDefault()?.Url();

}
