<script>
        document.querySelectorAll('.lang-drop a').forEach(link => {
        link.addEventListener('click', function (e) {
            e.stopPropagation(); // allow click but prevent dropdown toggle conflict
            window.location.href = this.getAttribute('href');
        });
    });
</script>